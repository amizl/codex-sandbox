<Window x:Class="PromptEngine.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Universal Prompt Engine"
    Height="780"
    Width="1200"
    WindowState="Maximized"
    SizeToContent="Manual"
    Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Dark theme surfaces -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#121212" />
        <SolidColorBrush x:Key="CardBrush" Color="#1e1e1e" />
        <SolidColorBrush x:Key="BorderBrushColor" Color="#333333" />

        <!-- Accent -->
        <SolidColorBrush x:Key="AccentBrush" Color="#00d4ff" />

        <!-- UPDATED: All text brushes now black -->
        <SolidColorBrush x:Key="TextBrush" Color="Blue" />
        <SolidColorBrush x:Key="SubtleBrush" Color="LightBlue" />

        <!-- Global TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!-- Global Label style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource SubtleBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,6,0,2" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,4" />
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BorderBrush" Value="#444444" />
        </Style>

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="MinHeight" Value="28" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBrush}"
                Padding="16"
                CornerRadius="10"
                BorderBrush="{StaticResource BorderBrushColor}"
                BorderThickness="1"
                Margin="0,0,0,12">

            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="40"
                               Foreground="{StaticResource AccentBrush}"
                               Text="Universal Prompt Engine" />

                    <!-- Subheader now black -->
                    <TextBlock Foreground="{StaticResource SubtleBrush}"
                               Text="Adaptive system for Midjourney, SDXL, &amp; DALL·E" />
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="16,0,0,0"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">

                    <Label Content="Context Mode" Margin="0,0,0,4" />

                    <ComboBox x:Name="ContextCombo"
                              Width="220"
                              SelectionChanged="ContextCombo_OnSelectionChanged" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="380" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: selector cards (3 columns) -->
            <Border Grid.Column="0"
                    Background="{StaticResource CardBrush}"
                    Padding="16"
                    CornerRadius="10"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1"
                    Margin="0,0,12,0">

                <StackPanel>
                    <TextBlock FontSize="16" Foreground="{StaticResource AccentBrush}" Text="Options" Margin="0,0,0,12" />

                    <UniformGrid Columns="3" Rows="0" Margin="-6">

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Medium" />
                                <ComboBox x:Name="MediumCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="MediumCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Style" />
                                <ComboBox x:Name="StyleCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="StyleCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Lighting" />
                                <ComboBox x:Name="LightingCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="LightingCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Camera" />
                                <ComboBox x:Name="CameraCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="CameraCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Material" />
                                <ComboBox x:Name="MaterialCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="MaterialCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Artist" />
                                <ComboBox x:Name="ArtistCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="ArtistCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Color" />
                                <ComboBox x:Name="ColorCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="ColorCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                        <Border Background="#252525" CornerRadius="8" Padding="12" Margin="6">
                            <StackPanel>
                                <Label Content="Quality / Details" />
                                <ComboBox x:Name="QualityCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="QualityCustom" Visibility="Collapsed" Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>

                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Right Panel -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBrush}"
                    Padding="16"
                    CornerRadius="10"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1">

                <StackPanel>

                    <Button x:Name="RandomizeButton"
                        Content="🎲 Randomize All"
                        Background="#bd00ff"
                        Foreground="Black"
                        Click="RandomizeButton_OnClick"
                        Margin="0,0,0,12" />

                    <Label Content="Core Subject" />
                    <TextBox x:Name="CoreSubjectBox" />

                    <Label Content="Prompt Format" />
                    <ComboBox x:Name="FormatCombo" Margin="0,0,0,8">
                    <ComboBoxItem Content="Standard (Comma Separated)" Tag="standard" IsSelected="True" />
                    <ComboBoxItem Content="Natural Language (DALL-E 3)" Tag="natural" />
                    </ComboBox>

                    <Button x:Name="GenerateButton"
                        Content="Generate Prompt"
                        Background="{StaticResource AccentBrush}"
                        Foreground="Red"
                        Click="GenerateButton_OnClick"
                        Margin="0,0,0,12" />

                    <Label Content="Positive Prompt" />
                    <TextBox x:Name="OutputBox"
                         AcceptsReturn="True"
                         Height="180"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />

                    <Button Content="Copy Positive"
                        Click="CopyPositive_OnClick"
                        Margin="0,4,0,10" />

                    <Label Content="Negative Prompt" />
                    <TextBox x:Name="NegativeOutputBox"
                         AcceptsReturn="True"
                         Height="120"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Foreground="Red" />

                    <Button Content="Copy Negative"
                        Click="CopyNegative_OnClick"
                        Margin="0,4,0,0" />

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
