<Window x:Class="PromptEngine.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Universal Prompt Engine"
        Height="780"
        Width="1200"
        Background="{DynamicResource BackgroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#121212" />
        <SolidColorBrush x:Key="CardBrush" Color="#1e1e1e" />
        <SolidColorBrush x:Key="BorderBrushColor" Color="#333333" />
        <SolidColorBrush x:Key="AccentBrush" Color="#00d4ff" />
        <SolidColorBrush x:Key="TextBrush" Color="#e0e0e0" />
        <SolidColorBrush x:Key="SubtleBrush" Color="#888888" />

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource SubtleBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,12,0,4" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderBrush" Value="#444444" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource CardBrush}"
                Padding="16"
                CornerRadius="10"
                BorderBrush="{StaticResource BorderBrushColor}"
                BorderThickness="1"
                Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="20"
                               Foreground="{StaticResource AccentBrush}"
                               Text="Universal Prompt Engine" />
                    <TextBlock Foreground="{StaticResource SubtleBrush}"
                               Text="Adaptive system for Midjourney, SDXL, &amp; DALL·E" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="16,0,0,0" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Label Content="Context Mode" Margin="0,0,0,4" />
                    <ComboBox x:Name="ContextCombo"
                              Width="220"
                              SelectionChanged="ContextCombo_OnSelectionChanged" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="*,380" ColumnSpacing="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Border Background="{StaticResource CardBrush}"
                        Padding="16"
                        CornerRadius="10"
                        BorderBrush="{StaticResource BorderBrushColor}"
                        BorderThickness="1">
                    <StackPanel>
                        <Button x:Name="RandomizeButton"
                                Content="🎲 Randomize All"
                                Background="#bd00ff"
                                Foreground="White"
                                Click="RandomizeButton_OnClick"
                                Margin="0,0,0,12" />

                        <Label Content="Core Subject" />
                        <TextBox x:Name="CoreSubjectBox" />

                        <Label Content="Prompt Format" />
                        <ComboBox x:Name="FormatCombo" Margin="0,0,0,8">
                            <ComboBoxItem Content="Standard (Comma Separated)" Tag="standard" IsSelected="True" />
                            <ComboBoxItem Content="Natural Language (DALL-E 3)" Tag="natural" />
                        </ComboBox>

                        <Separator Margin="0,4" />

                        <StackPanel Margin="0,4" x:Name="SelectorsPanel">
                            <StackPanel Margin="0,4">
                                <Label Content="Medium" />
                                <ComboBox x:Name="MediumCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="MediumCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom medium" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Style" />
                                <ComboBox x:Name="StyleCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="StyleCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom style" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Lighting" />
                                <ComboBox x:Name="LightingCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="LightingCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter custom lighting" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Camera" />
                                <ComboBox x:Name="CameraCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="CameraCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom camera view" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Material" />
                                <ComboBox x:Name="MaterialCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="MaterialCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom material" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Artist" />
                                <ComboBox x:Name="ArtistCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="ArtistCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom artist" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Color" />
                                <ComboBox x:Name="ColorCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="ColorCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom color palette" />
                            </StackPanel>

                            <StackPanel Margin="0,4">
                                <Label Content="Quality / Details" />
                                <ComboBox x:Name="QualityCombo" SelectionChanged="FieldCombo_OnSelectionChanged" />
                                <TextBox x:Name="QualityCustom" Visibility="Collapsed" Margin="0,6,0,0" ToolTip="Enter a custom quality tag" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <Border Grid.Column="1"
                    Background="{StaticResource CardBrush}"
                    Padding="16"
                    CornerRadius="10"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1">
                <StackPanel>
                    <Button x:Name="GenerateButton"
                            Content="Generate Prompt"
                            Background="{StaticResource AccentBrush}"
                            Foreground="Black"
                            Click="GenerateButton_OnClick"
                            Margin="0,0,0,12" />

                    <Label Content="Positive Prompt" />
                    <TextBox x:Name="OutputBox"
                             AcceptsReturn="True"
                             Height="180"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                    <Button Content="Copy Positive" Click="CopyPositive_OnClick" Margin="0,4,0,10" />

                    <Label Content="Negative Prompt" />
                    <TextBox x:Name="NegativeOutputBox"
                             AcceptsReturn="True"
                             Height="120"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Foreground="#ff8888" />
                    <Button Content="Copy Negative" Click="CopyNegative_OnClick" Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
